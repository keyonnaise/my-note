{
  "semi": true,
  "printWidth": 100,
  "tabWidth": 2,
  "singleQuote": false,
  "quoteProps": "as-needed",
  "trailingComma": "all",

  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "react",
    "<THIRD_PARTY_MODULES>",
    "^~/(.*)(?<!\\.css)$",
    "^[./](.*)(?<!\\.css)$",
    "^~/(.*\\.css)$",
    "^[./](.*\\.css)$",
    "<SIDE_EFFECT>"
  ],
  "importOrderSortSpecifiers": true,
  "importOrderSideEffects": false,

  "overrides": [
    {
      "files": "*.css.ts",
      "options": {
        "printWidth": 9999
      }
    }
  ]
}
