{
  "semi": true,
  "printWidth": 100,
  "tabWidth": 2,
  "singleQuote": false,
  "quoteProps": "as-needed",
  "trailingComma": "all",

  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": ["<THIRD_PARTY_MODULES>", "^[./]"],
  "importOrderSortSpecifiers": true,

  "overrides": [
    {
      "files": "*.css.ts",
      "options": {
        "printWidth": 9999
      }
    }
  ]
}
